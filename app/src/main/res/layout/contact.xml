<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="#efefef"
    >
    <include layout="@layout/toolbar"></include>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <ListView
            android:id="@+id/contact_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:dividerHeight="0.5dp"
            android:divider="#eee"
            >
        </ListView>
        <dxs.dhitoshi.com.index.IndexView
            android:id="@+id/indexView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            app:heightOccupy="1.0"
            app:selectIndexBgColor="#2c92fb"
            app:indexTextSizeScale="0.7"
            app:tipBg="@drawable/tip_bg"
            app:tipTextColor="#ffffff"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dddddd"
        ></View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/white"
        >
        <TextView
            android:id="@+id/contact_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择客户地区"
            android:layout_centerVertical="true"
            android:textColor="#666666"
            android:textSize="15dp"
            android:drawableRight="@mipmap/down"
            android:drawablePadding="8dp"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:id="@+id/contact_commit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确定"
            android:background="@drawable/contact_click"
            android:textColor="@android:color/white"
            android:textSize="14dp"
            android:layout_centerVertical="true"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            />
    </RelativeLayout>
</LinearLayout>
