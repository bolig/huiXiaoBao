<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <include layout="@layout/toolbar"></include>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            >
            <RelativeLayout
                android:id="@+id/tribe_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/demo_tribe_header"
                android:padding="20dp"
                >
                <ImageView
                    android:id="@+id/tribe_head"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/aliwx_tribe_head_default"
                    />
                <TextView
                    android:id="@+id/tribe_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tribe_head"
                    android:layout_marginTop="20dp"
                    android:layout_centerHorizontal="true"
                    android:textSize="@dimen/aliwx_font_first_grade"
                    android:textColor="@color/aliwx_white"
                    android:text="测试"
                    />
                <TextView
                    android:id="@+id/tribe_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tribe_name"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/aliwx_white"
                    android:text="群号"
                    />
            </RelativeLayout>
            <TextView
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:gravity="center_vertical"
                android:textColor="#ff333333"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="群简介："
                />
            <EditText
                android:id="@+id/tribe_description"
                style="@style/more_item_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:hint="群简介"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:textSize="@dimen/aliwx_font_second_grade"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/more_bg_p"
                >
            </View>
            <RelativeLayout
                android:id="@+id/tribe_manage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_click"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:gravity="center_vertical"
                    android:textColor="#ff333333"
                    android:textSize="15dp"
                    android:text="群成员管理"
                    />
                <TextView
                    android:id="@+id/tribe_number"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="#ff333333"
                    android:textSize="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:drawableRight="@drawable/aliwx_arrow"
                    android:drawablePadding="8dp"
                    android:text="1人"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@+id/tribe_number"
                    android:background="#cccccc"
                    ></View>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:gravity="center_vertical"
                    android:textColor="#ff333333"
                    android:textSize="15dp"
                    android:text="群消息状态"
                    />
                <TextView
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textSize="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:drawablePadding="8dp"
                    android:text="接收并推送"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#cccccc"
                ></View>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:gravity="center_vertical"
                    android:textColor="#ff333333"
                    android:textSize="15dp"
                    android:text="接收群@消息"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="12dp"
                    android:src="@mipmap/on_switch"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#cccccc"
                ></View>
            <RelativeLayout
                android:id="@+id/tribe_nick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_click"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:gravity="center_vertical"
                    android:textColor="#ff333333"
                    android:textSize="15dp"
                    android:text="我的昵称"
                    />
                <TextView
                    android:id="@+id/nick_name"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="#ff333333"
                    android:textSize="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:drawableRight="@drawable/aliwx_arrow"
                    android:drawablePadding="8dp"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@+id/nick_name"
                    android:background="#cccccc"
                    ></View>
            </RelativeLayout>
            <TextView
                android:id="@+id/quite_tribe"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginBottom="14dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/demo_common_red_btn_bg"
                android:gravity="center"
                android:text="退出群"
                android:textColor="#ffffff"
                android:textSize="16dp"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
