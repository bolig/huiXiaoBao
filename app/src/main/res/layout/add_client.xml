            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#D9D9D9"
                android:layout_marginLeft="20dp"
                ></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                >

