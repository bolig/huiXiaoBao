<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#e6e6e6"
    android:fitsSystemWindows="true"
    >
    <include layout="@layout/toolbar"></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:background="@android:color/white"
        >
        <TextView
            android:id="@+id/safe"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textSize="14dp"
            android:textColor="#333333"
            android:text="账号安全"
            android:layout_marginLeft="20dp"
            android:paddingRight="15dp"
            android:gravity="center_vertical"
            android:drawableRight="@mipmap/right"
            android:drawablePadding="8dp"
            android:drawableLeft="@mipmap/safe"
            android:clickable="true"
            android:background="@drawable/item_click"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="20dp"
            android:background="#D9D9D9"></View>
        <TextView
            android:id="@+id/base"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textSize="14dp"
            android:textColor="#333333"
            android:text="基础设置"
            android:layout_marginLeft="20dp"
            android:paddingRight="15dp"
            android:gravity="center_vertical"
            android:drawableRight="@mipmap/right"
            android:drawablePadding="8dp"
            android:drawableLeft="@mipmap/base_setting"
            android:clickable="true"
            android:background="@drawable/item_click"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:background="@android:color/white"
        >
        <TextView
            android:id="@+id/copyright"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textSize="14dp"
            android:textColor="#333333"
            android:text="版权信息"
            android:drawablePadding="8dp"
            android:drawableLeft="@mipmap/copyright"
            android:layout_marginLeft="20dp"
            android:paddingRight="15dp"
            android:gravity="center_vertical"
            android:drawableRight="@mipmap/right"
            android:clickable="true"
            android:background="@drawable/item_click"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="20dp"
            android:background="#D9D9D9"></View>
        <TextView
            android:id="@+id/exit"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textSize="14dp"
            android:textColor="#333333"
            android:text="退出登录"
            android:layout_marginLeft="20dp"
            android:paddingRight="15dp"
            android:gravity="center_vertical"
            android:drawableLeft="@mipmap/exit"
            android:drawablePadding="8dp"
            android:drawableRight="@mipmap/right"
            android:clickable="true"
            android:background="@drawable/item_click"
            />
    </LinearLayout>
</LinearLayout>
