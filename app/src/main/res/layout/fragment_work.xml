<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#e6e6e6"
    >
    <include layout="@layout/toolbar_title"></include>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/work_banner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/banner"
                android:scaleType="fitXY"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:weightSum="4"
                >
                <LinearLayout
                    android:id="@+id/work_examine"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:text="0"
                        android:textColor="#999999"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:text="待我审批"
                        android:layout_marginTop="5dp"
                        android:textColor="#333333"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/work_leave"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:text="0"
                        android:textColor="#999999"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:text="出勤天数"
                        android:layout_marginTop="5dp"
                        android:textColor="#333333"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/work_sign"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:text="0"
                        android:textColor="#999999"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:text="签到人数"
                        android:layout_marginTop="5dp"
                        android:textColor="#333333"
                        />
                </LinearLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="35dp"
                    android:background="#d9d9d9"
                    android:layout_gravity="center"
                    ></View>
                <ImageView
                    android:id="@+id/work_meet"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@mipmap/meet"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="常用应用"
                android:textSize="14dp"
                android:textColor="#333333"
                android:padding="10dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                >
                <TextView
                    android:id="@+id/work_target"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/work_target"
                    android:text="工作目标"
                    android:textColor="#333333"
                    android:textSize="13dp"
                    android:gravity="center"
                    android:drawablePadding="6dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="10dp"
                    />
                <TextView
                    android:id="@+id/work_performance"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/performance"
                    android:text="业绩目标"
                    android:textColor="#333333"
                    android:textSize="13dp"
                    android:gravity="center"
                    android:drawablePadding="6dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="10dp"
                    />
                <TextView
                    android:id="@+id/work_plan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/plan"
                    android:text="日程/计划"
                    android:textColor="#333333"
                    android:textSize="13dp"
                    android:gravity="center"
                    android:drawablePadding="6dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="10dp"
                    />
                <TextView
                    android:id="@+id/work_visit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/visit_client"
                    android:text="拜访客户"
                    android:textColor="#333333"
                    android:textSize="13dp"
                    android:gravity="center"
                    android:drawablePadding="6dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="10dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="4"
                android:background="@android:color/white"
                >
                <TextView
                    android:id="@+id/work_attendance"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/attendance"
                    android:text="考勤打卡"
                    android:textColor="#333333"
                    android:textSize="13dp"
                    android:gravity="center"
                    android:drawablePadding="6dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="10dp"
                    />
                <TextView
                    android:id="@+id/leave"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/leave"
                    android:text="请假"
                    android:textColor="#333333"
                    android:textSize="13dp"
                    android:gravity="center"
                    android:drawablePadding="6dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="10dp"
                    />
                <TextView
                    android:id="@+id/examine"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/examine"
                    android:text="审批"
                    android:textColor="#333333"
                    android:textSize="13dp"
                    android:gravity="center"
                    android:drawablePadding="6dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="10dp"
                    />
            </LinearLayout>
            <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="常用应用"
            android:textSize="14dp"
            android:textColor="#333333"
            android:padding="10dp"
            android:background="#e6e6e6"
            />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="4"
                android:background="@android:color/white"
                >
                <TextView
                    android:id="@+id/work_bbs"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/bbs"
                    android:text="BBS论坛"
                    android:textColor="#333333"
                    android:textSize="13dp"
                    android:gravity="center"
                    android:drawablePadding="6dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    />
                <TextView
                    android:id="@+id/work_knowledge"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/knowledge"
                    android:text="知识库"
                    android:textColor="#333333"
                    android:textSize="13dp"
                    android:gravity="center"
                    android:drawablePadding="6dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    />
                <TextView
                    android:id="@+id/work_news"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/company_news"
                    android:text="公司新闻"
                    android:textColor="#333333"
                    android:textSize="13dp"
                    android:gravity="center"
                    android:drawablePadding="6dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
